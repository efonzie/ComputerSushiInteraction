<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="vertical"
    android:padding="10dp" >

    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:padding="2dp" >
    
	    <Button
	        android:id="@+id/callServer"
	        style="?android:attr/borderlessButtonStyle"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="20dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/mainbutton2"
	        android:text="Call Server"
	        android:textColor="#206BA4"
	        android:textSize="12sp" />
	    
	    <Button
	        android:id="@+id/drinkRefill"
	        style="?android:attr/borderlessButtonStyle"
	        android:layout_width="0dp"
	        android:layout_height="20dp"
	        android:layout_weight="1"
	        android:layout_alignParentLeft="true"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/mainbutton2"
	        android:text="Drink Refill"
	        android:textColor="#206BA4"
	        android:textSize="12sp" />
    
    </LinearLayout>
    
    <ImageView
        android:id="@+id/menuDetailsItemImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:contentDescription="Menu item image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menuDetailsItemName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/menuDetailsItemPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/menuDetailsItemDesc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/addItemToOrder"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mainbutton2"
        android:text="Add to Order"
        android:textColor="#206BA4"
        android:textSize="20sp" />

</LinearLayout>